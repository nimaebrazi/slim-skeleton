{
  "name": "nimaebrazi/action-domain-responder",
  "license": "MIT",
  "description": "Blog Project With ADR Pattern",
  "authors": [
    {
      "name": "Nima Ebrazi",
      "email": "nima.ebrazi1373@gmail.com"
    }
  ],
  "require": {
    "php": "^7.0",
    "illuminate/database": "^5.7",
    "monolog/monolog": "^1.17",
    "slim/slim": "^3.11",
    "vlucas/phpdotenv": "^2.5"
  },
  "require-dev": {
    "phpunit/phpunit": ">=4.8 < 6.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Provider\\": "providers/"
    },
    "files": [
      "helpers/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "tests"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "serve": "php -S localhost:8082 -t public public/index.php",
    "test": "phpunit"
  }
}
