{
  "name": "nimaebrazi/action-domain-responder",
  "license": "MIT",
  "description": "Blog Project With ADR Pattern",
  "authors": [
    {
      "name": "Nima Ebrazi",
      "email": "nima.ebrazi1373@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.2",
    "hassankhan/config": "^2.0",
    "illuminate/database": "^5.7",
    "monolog/monolog": "^1.17",
    "php-di/slim-bridge": "^2.0",
    "slim/slim": "^3.11",
    "vlucas/phpdotenv": "^2.5"
  },
  "require-dev": {
    "phpunit/phpunit": ">=4.8 < 6.0",
    "symfony/var-dumper": "^4.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "tests"
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "serve": "php -S localhost:8082 -t public public/index.php",
    "test": "phpunit"
  }
}
